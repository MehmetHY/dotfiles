{
    "workbench.startupEditor": "none",
    "files.autoSave": "afterDelay",
    "editor.fontSize": 18,
    "editor.smoothScrolling": true,
    "editor.cursorSurroundingLines": 25,
    "editor.acceptSuggestionOnCommitCharacter": false,
    "workbench.preferredDarkColorTheme": "minipiva",
    "workbench.preferredHighContrastColorTheme": "minipiva",
    "workbench.preferredHighContrastLightColorTheme": "minipiva",
    "workbench.preferredLightColorTheme": "minipiva",
    "security.workspace.trust.enabled": false,
    "vim.cursorStylePerMode.insert": "line",
    "vim.cursorStylePerMode.normal": "block",
    "vim.cursorStylePerMode.replace": "underline-thin",
    "vim.cursorStylePerMode.visual": "underline-thin",
    "vim.cursorStylePerMode.visualblock": "underline-thin",
    "vim.cursorStylePerMode.visualline": "underline-thin",
    "vim.enableNeovim": true,
    "vim.foldfix": true,
    "vim.highlightedyank.duration": 100,
    "vim.highlightedyank.enable": true,
    "vim.highlightedyank.color": "rgba(200, 240, 170, 0.5)",
    "vim.scroll": 5,
    "vim.useSystemClipboard": true,
    "editor.cursorBlinking": "solid",
    "editor.cursorSmoothCaretAnimation": true,
    "editor.suggest.localityBonus": true,
    
    "vim.leader": "<space>",
    
    "vim.commandLineModeKeyBindings": [
    
    ],
    "vim.commandLineModeKeyBindingsNonRecursive": [
    
    ],
    "vim.insertModeKeyBindings": [
    
    ],
    "vim.insertModeKeyBindingsNonRecursive": [
        { 
            "before": ["j", "k"],
            "after": ["<ESC>"]
        },
    ],
    "vim.normalModeKeyBindings": [
    
    ],
    "vim.normalModeKeyBindingsNonRecursive": [
        { 
            "before": ["<leader>", "w"],
            "commands": ["workbench.action.closeActiveEditor"]
        },
        { 
            "before": ["<leader>", "<leader>", "w"],
            "commands": ["workbench.action.closeOtherEditors"]
        },
        {
            "before": ["<S-h>"],
            "commands": ["workbench.action.previousEditor"]
        },
        {
            "before": ["<S-l>"],
            "commands": ["workbench.action.nextEditor"]
        }
    
    ],
    "vim.operatorPendingModeKeyBindings": [
    
    ],
    "vim.operatorPendingModeKeyBindingsNonRecursive": [
    
    ],
    "vim.visualModeKeyBindings": [
    
    ],
    "vim.visualModeKeyBindingsNonRecursive": [
        { 
            "before": ["<leader>", "j"],
            "after": ["<ESC>"]
        },
        {
            "before": ["<S-h>"],
            "commands": ["workbench.action.previousEditor"]
        },
        {
            "before": ["<S-l>"],
            "commands": ["workbench.action.nextEditor"]
        }
    ],
    "workbench.sideBar.location": "right",
    "editor.minimap.enabled": false,
    "editor.fontFamily": "'Hack NF'",
    "explorer.confirmDelete": false,
    "workbench.tree.indent": 18,
    "window.menuBarVisibility": "toggle",
    "terminal.integrated.fontSize": 16,
    "explorer.confirmDragAndDrop": false,
    "workbench.colorTheme": "minipiva",
    "explorer.enableUndo": false,
    "workbench.iconTheme": "vscode-great-icons",
    "explorer.compactFolders": false,
    "workbench.list.smoothScrolling": true,
    "workbench.editor.showIcons": false
}